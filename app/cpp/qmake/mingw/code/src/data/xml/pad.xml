<?xml version='1.0' encoding='UTF-8'?>
<rdv>
    <datas>
		<!-- pad -->
		<data>
			<code>pad</code>
			<title>ReadyPad</title>
			<logo>readydev.png</logo>
			<width>400</width>
			<height>400</height>
			<fullscreen_on>1</fullscreen_on>
			<maximize_on>1</maximize_on>
			<map>
				<!-- header -->
				<data>
					<category>header</category>
					<type>button</type>
					<key>header/connect</key>
					<style>flat</style>
					<text>Connexion</text>
					<picto>search</picto>
					<picto_color>#aaaaff</picto_color>
					<picto_size>20</picto_size>
				</data>
				<data>
					<category>header</category>
					<type>spacer</type>
				</data>
				<!-- end -->
			</map>
		</data>
		<!-- login -->
		<data>
			<code>login</code>
			<title>CONNEXION</title>
			<logo>readydev.png</logo>
			<width>380</width>
			<height>150</height>
			<label_width>160</label_width>
			<width_fix>0</width_fix>
			<height_fix>1</height_fix>
			<map>
				<!-- username -->
				<data>
					<category>username</category>
					<type>lineedit/icon/clear</type>
					<key>login/username</key>
					<key_clear>login/username/clear</key_clear>
					<text>Nom d'utilisateur</text>
					<picto>user</picto>
					<picto_clear>times</picto_clear>
					<picto_color>#aaaaff</picto_color>
					<picto_size>20</picto_size>
					<style>flat_icon_clear</style>
				</data>
				<!-- password -->
				<data>
					<category>password</category>
					<type>lineedit/icon/clear</type>
					<key>login/password</key>
					<key_clear>login/password/clear</key_clear>
					<text>Mot de passe</text>
					<picto>key</picto>
					<picto_clear>times</picto_clear>
					<picto_color>#aaaaff</picto_color>
					<picto_size>20</picto_size>
					<echo_mode>password</echo_mode>
					<style>flat_icon_clear</style>
				</data>
				<!-- message -->
				<data>
					<category>message</category>
					<type>label/message</type>
					<key>login/error</key>
					<text>Votre mot de passe est incorrect.</text>
					<align>center</align>
					<style>flat_message</style>
				</data>
				<!-- button -->
				<data>
					<category>button</category>
					<type>spacer</type>
				</data>
				<data>
					<category>button</category>
					<type>button</type>
					<key>login/connect</key>
					<style>flat</style>
					<text>Connexion</text>
					<picto>user</picto>
					<picto_color>#aaaaff</picto_color>
					<picto_size>20</picto_size>
				</data>
				<!-- account -->
				<data>
					<category>account</category>
					<type>spacer</type>
				</data>
				<data>
					<category>account</category>
					<type>button</type>
					<key>account/create</key>
					<text>Cr√©er un compte</text>
					<picto>plus</picto>
					<picto_color>#aaaaff</picto_color>
					<picto_size>20</picto_size>
				</data>
				<data>
					<category>account</category>
					<type>spacer</type>
				</data>
				<!-- end -->
			</map>
		</data>
		<!-- socket -->
		<data>
			<code>socket</code>
			<major>2</major>
			<minor>2</minor>
			<domain>AF_INET</domain>
			<type>SOCK_STREAM</type>
			<protocol>IPPROTO_TCP</protocol>
			<family>AF_INET</family>
			<server_ip>192.168.1.45</server_ip>
			<client_ip>0.0.0.0</client_ip>
			<port>8555</port>
			<backlog>5</backlog>
		</data>
		<!-- end -->
    </datas>
</rdv>
